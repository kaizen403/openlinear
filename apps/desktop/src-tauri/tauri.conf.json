{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "KazCode",
  "version": "0.1.0",
  "identifier": "com.openlinear.app",
  "build": {
    "beforeDevCommand": "PORT=3000 pnpm --filter @openlinear/desktop-ui dev",
    "devUrl": "http://localhost:3000"
  },
  "app": {
    "security": { "csp": null },
    "windows": [
      {
        "title": "KazCode",
        "width": 1200,
        "height": 800,
        "center": true,
        "decorations": false
      }
    ]
  },
  "bundle": {
    "active": true,
    "targets": ["dmg", "app", "appimage", "deb"],
    "icon": ["icons/icon.png"],
    "externalBin": ["binaries/openlinear-api"],
    "macOS": {
      "minimumSystemVersion": "10.15",
      "dmg": {
        "windowSize": { "width": 540, "height": 400 }
      }
    },
    "linux": {
      "appimage": { "bundleMediaFramework": false },
      "deb": { "depends": [] }
    }
  },
  "plugins": {
    "shell": { "open": true },
    "deep-link": { "desktop": { "schemes": ["openlinear"] } }
  }
}
