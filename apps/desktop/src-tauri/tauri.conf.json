{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "OpenLinear",
  "version": "0.1.0",
  "identifier": "com.openlinear.app",
  "build": {
    "beforeDevCommand": "pnpm --filter @openlinear/web dev",
    "devUrl": "http://localhost:3000"
  },
  "app": {
    "security": { "csp": null },
    "windows": [{ "title": "OpenLinear", "width": 1200, "height": 800, "center": true }]
  },
  "bundle": {
    "active": true,
    "targets": ["dmg", "app", "appimage", "deb"],
    "icon": ["icons/icon.png"]
  },
  "plugins": {
    "shell": { "open": true },
    "deep-link": { "desktop": { "schemes": ["openlinear"] } }
  }
}
