{
  "name": "openlinear",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "./scripts/dev.sh",
    "dev:web": "./scripts/dev-web.sh",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "typecheck": "turbo run typecheck",
    "db:push": "pnpm --filter db db:push",
    "db:seed": "pnpm --filter @openlinear/api exec tsx ../../packages/db/prisma/seed.ts",
    "db:studio": "pnpm --filter db db:studio",
    "build:sidecar": "./scripts/build-sidecar.sh",
    "build:desktop": "pnpm --filter @openlinear/desktop tauri build"
  },
  "devDependencies": {
    "@opencode-ai/sdk": "^1.2.5",
    "turbo": "^2.8.9",
    "typescript": "^5.9.3"
  },
  "packageManager": "pnpm@9.0.0"
}
